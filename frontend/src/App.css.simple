/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

/* App Container */
.app-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 20px;
  height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Header */
.app-header {
  background: white;
  border-radius: 12px;
  padding: 20px;
  margin-bottom: 20px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
}

.app-header h1 {
  color: #333;
  margin-bottom: 15px;
  font-size: 28px;
}

.agent-controls {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
}

.agent-selector {
  display: flex;
  gap: 15px;
}

.agent-selector label {
  display: flex;
  align-items: center;
  gap: 8px;
  padding: 8px 16px;
  background: #f3f4f6;
  border-radius: 8px;
  cursor: pointer;
  transition: all 0.2s;
  font-weight: 500;
  color: #4b5563;
}

.agent-selector label.selected {
  background: #667eea;
  color: white;
}

.agent-selector label:hover {
  background: #e5e7eb;
}

.agent-selector label.selected:hover {
  background: #5a67d8;
}

.agent-selector input[type="radio"] {
  margin: 0;
}

.new-conversation-btn {
  padding: 8px 16px;
  background: #10b981;
  color: white;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  font-weight: 600;
  transition: background 0.2s;
}

.new-conversation-btn:hover {
  background: #059669;
}

.thread-info {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px;
  background: #f9fafb;
  border-radius: 8px;
  font-family: 'Courier New', monospace;
  font-size: 14px;
}

.thread-label {
  color: #6b7280;
  font-weight: 600;
}

.thread-id {
  color: #374151;
}

/* Chat Container */
.chat-container {
  flex: 1;
  background: white;
  border-radius: 12px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* Messages Area */
.messages {
  flex: 1;
  overflow-y: auto;
  padding: 20px;
  background: #f9fafb;
}

.welcome-message {
  text-align: center;
  padding: 40px;
  color: #6b7280;
}

.welcome-message h2 {
  color: #374151;
  margin-bottom: 20px;
}

.welcome-message p {
  margin-bottom: 15px;
  font-size: 16px;
  line-height: 1.6;
}

.example-questions {
  margin-top: 30px;
  padding: 20px;
  background: white;
  border-radius: 8px;
  text-align: left;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.example-questions h3 {
  color: #374151;
  margin-bottom: 15px;
  font-size: 18px;
}

.example-questions ul {
  list-style: none;
  padding: 0;
}

.example-questions li {
  padding: 10px;
  margin-bottom: 10px;
  background: #f3f4f6;
  border-radius: 6px;
  font-family: 'Courier New', monospace;
  font-size: 14px;
  color: #4b5563;
}

/* Messages */
.message {
  margin-bottom: 20px;
  display: flex;
}

.message.user {
  justify-content: flex-end;
}

.message.bot {
  justify-content: flex-start;
}

.message-bubble {
  max-width: 70%;
  padding: 12px 16px;
  border-radius: 12px;
  position: relative;
}

.message.user .message-bubble {
  background: #667eea;
  color: white;
}

.message.bot .message-bubble {
  background: white;
  border: 1px solid #e5e7eb;
}

.message.error .message-bubble {
  background: #fee2e2;
  border: 1px solid #fecaca;
  color: #991b1b;
}

.message-content {
  line-height: 1.6;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.message-metadata {
  display: flex;
  gap: 10px;
  margin-top: 8px;
  padding-top: 8px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  font-size: 12px;
  opacity: 0.8;
}

.message.user .message-metadata {
  border-top-color: rgba(255, 255, 255, 0.2);
}

.metadata-item {
  display: flex;
  align-items: center;
  gap: 4px;
}

.message-time {
  font-size: 11px;
  opacity: 0.6;
  margin-top: 4px;
}

/* Typing Indicator */
.typing-indicator {
  display: flex;
  gap: 4px;
  padding: 8px 0;
}

.typing-indicator span {
  width: 8px;
  height: 8px;
  background: #6b7280;
  border-radius: 50%;
  animation: typing 1.4s ease-in-out infinite;
}

.typing-indicator span:nth-child(1) {
  animation-delay: -0.32s;
}

.typing-indicator span:nth-child(2) {
  animation-delay: -0.16s;
}

@keyframes typing {
  0%, 80%, 100% {
    opacity: 0.5;
    transform: scale(1);
  }
  40% {
    opacity: 1;
    transform: scale(1.2);
  }
}

/* Input Form */
.input-form {
  display: flex;
  gap: 10px;
  padding: 20px;
  background: white;
  border-top: 1px solid #e5e7eb;
}

.input-field {
  flex: 1;
  padding: 12px 16px;
  border: 2px solid #e5e7eb;
  border-radius: 8px;
  font-size: 16px;
  transition: border-color 0.2s;
}

.input-field:focus {
  outline: none;
  border-color: #667eea;
}

.input-field:disabled {
  background: #f3f4f6;
  cursor: not-allowed;
}

.submit-btn {
  padding: 12px 24px;
  background: #667eea;
  color: white;
  border: none;
  border-radius: 8px;
  font-size: 16px;
  font-weight: 600;
  cursor: pointer;
  transition: background 0.2s;
  display: flex;
  align-items: center;
  gap: 8px;
}

.submit-btn:hover:not(:disabled) {
  background: #5a67d8;
}

.submit-btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* Scrollbar Styling */
.messages::-webkit-scrollbar {
  width: 8px;
}

.messages::-webkit-scrollbar-track {
  background: #f3f4f6;
}

.messages::-webkit-scrollbar-thumb {
  background: #cbd5e1;
  border-radius: 4px;
}

.messages::-webkit-scrollbar-thumb:hover {
  background: #94a3b8;
}

/* Responsive Design */
@media (max-width: 768px) {
  .app-container {
    padding: 10px;
  }

  .app-header h1 {
    font-size: 24px;
  }

  .agent-selector {
    flex-wrap: wrap;
  }

  .message-bubble {
    max-width: 85%;
  }

  .example-questions {
    padding: 15px;
  }
}